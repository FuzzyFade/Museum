/* miniprogram/pages/detail/detail.wxss */
.contain {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  overflow: hidden;
}

.content {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  overflow: auto;
}

.picture {
  width: 88vw;
  height: 409px;
  border-radius: 24px;
  margin: 10px 0;
}

.detail-title {
  margin-top: 10px;
  width: 88vw;
  font-size: 20px;
  font-weight: 400;
  line-height: 29px;
  color:rgba(59,81,66,1);
}

.detail-outline {
  width: 88vw;
  height: 41px;
  font-size: 14px;
  font-weight: 400;
  line-height: 18px;
  margin-top: 6px;
  color:rgba(59,81,66,1);
}

.detail-description {
  width: 88vw;
  font-size: 15px;
  font-weight: 400;
  line-height: 20px;
  margin: 6px 0 20px 0;
  color:rgba(59,81,66,1);
}

.detail-area {
  font-size: 15px;
  font-weight: 400;
  line-height: 20px;
  margin: 6px 0 30px 0;
  color:rgba(59,81,66,1);
}

.detailTitle {
  font-size: 20px;
  height: 40px;
  width: 100vw;
  line-height: 40px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #3B5142;
}

.detailContent {
  font-size: 16px;
  line-height: 23px;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 7px 6vw;
  color: #3D4E43;
}

.cloud {
  width: 40px;
  height: 41px;
  margin: 0 10px;
}
