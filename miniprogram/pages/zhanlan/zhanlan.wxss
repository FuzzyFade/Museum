/* pages/zhanlan.wxss */
.contain{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  overflow: hidden;
}

.content{
  width: 294px;
  height: 602px;
  background:rgba(255,255,255,1);
  box-shadow: 0px 5px 10px rgba(76,114,89,1);
  opacity: .8;
  border-radius: 24px;
}

.review{
  position:absolute;
  right:24%;
  top:15%;
  font-size:20px;
  font-weight:400;
  line-height:29px;
  color:rgba(255,255,255,1);
  opacity:1;
}

.review-icon{
  width:33px;
  height:33px;
  top:14%;
  right:5%;
  position: absolute;
}

.review-container{
  top:13%;
  width:100%;
  height:100%;
  opacity:1;
  position:absolute;
}

.exhibit{
  position:absolute;
  left:24%;
  top:15%;
  font-size:20px;
  font-weight:400;
  line-height:29px;
  color:rgba(255,255,255,1);
  opacity:1;
}

.exhibit-icon{
  width:33px;
  height:33px;
  top:14%;
  left:5%;
  position: absolute;
}

.exhibit-container{
  top:13%;
  width:100%;
  height:100%;
  opacity:1;
  position:absolute;
}

.slide-view{
  position:absolute;
  top:25%;
  width:100%;
  height:85%;
  bottom:15%;
}

.swiper{
  height:100%;
}

.slide-item{
  width:300px;
  left: 17%;
}

.item-container{
  box-shadow: 0px 5px 16px rgba(76,114,89,.8);
  background-color:#e3ece1;
  border-radius: 15px;
  height: 95%;
  margin-left:3%;
  margin-right:3%;
  text-align: center;
}

.item-container-un{
  box-shadow: 0px 5px 16px rgba(76,114,89,.2);
  background-color:#e3ece1;
  border-radius: 15px;
  height: 90%;
  margin-top:5%;
  margin-left:3%;
  margin-right:3%;
  text-align: center;
}

.swiper-transition {
  transition: margin .5s ease, height .5s ease;
}

.item-name{
  color:rgba(76,114,89,1);
  font-size: 14px;
}

.item-info{
  color:rgba(76,114,89,1);
  font-size: 13px;
}
