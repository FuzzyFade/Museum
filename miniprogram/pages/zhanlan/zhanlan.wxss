/* pages/zhanlan.wxss */
.contain{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  overflow: hidden;
}

.content{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  margin-top: 80px;
}

.review{
  position:absolute;
  right:24%;
  top:15%;
  font-size:20px;
  font-weight:400;
  line-height:29px;
  color:rgba(255,255,255,1);
  opacity:1;
}

.choose-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 55px;
}

.review-button{
  width: 20vw;
  height: 55px;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}

.review-icon{
  width: 36px;
  height: 36px;
}

.exhibit{
  width: 80vw;
  height: 55px;
  font-size: 20px;
  color:rgba(255,255,255,1);
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 0 150px 0 0;
  background:  rgb(144,166,151);
}

.review-container{
  top:13%;
  width:100%;
  height:100%;
  opacity:1;
  position:absolute;
}

.exhibit-icon{
  width:33px;
  height:33px;
  top:14%;
  left:5%;
  position: absolute;
}

.exhibit-container{
  top:13%;
  width:100%;
  height:100%;
  opacity:1;
  position:absolute;
}

.slide-view{
  width: 100vw;
  flex: 1;
  background: rgb(144,166,151);
}

.slide-item{
  display: flex;
  justify-items: center;
  align-items: center;
  height: 483px;
}

.picture {
  height: 363px;
}

.item-container{
  box-shadow: 0px 12px 13px rgba(76,114,89,.6);
  background:rgb(233,237,234);
  border-radius: 24px;
  width: 294px;
  height: 483px;
  margin: 10px;
  text-align: center;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.item-container-un{
  box-shadow: 0px 12px 13px rgba(76,114,89,.6);
  background:rgb(233,237,234);
  border-radius: 24px;
  width: 294px;
  height: 434px;
  margin: 10px;
  text-align: center;
  overflow: hidden;
}

.swiper-transition {
  transition: margin .5s ease, height .5s ease;
}

.item-name{
  color:rgba(76,114,89,1);
  font-size: 18px;
  margin-bottom: 5px;
}

.item-info{
  color:rgba(76,114,89,1);
  font-size: 14px;
}

.bottom-bar {
  position: absolute;
  bottom: 0;
  left: 0;
}

.to-home {
  width: 78px;
  height: 74px;
}

.show-text {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  transition: height .5s ease;
  padding: 0 5px;
}