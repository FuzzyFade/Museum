/* pages/zhanlan.wxss */
.contain{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  overflow: hidden;
}

.content{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  margin-top: 80px;
  overflow: hidden;
}

.select-bar {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  height: 55px;
}

.review-button{
  width: 20vw;
  height: 55px;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}

.review-icon{
  width: 36px;
  height: 36px;
}

.kind-text-exhibit {
  position: absolute;
  width: 70vw;
  height: 55px;
  display: flex;  
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 20px;
  z-index: 11111;
}

.kind-text-review {
  position: absolute;
  right: 0;
  width: 70vw;
  height: 55px;
  display: flex;  
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 20px;
  z-index: 11111;
}


.exhibit{
  width: 70vw;
  height: 0;
  border-right: 10vw solid transparent;
  border-bottom: 44px solid rgb(144,166,151);
}

.review{
  width: 70vw;
  height: 0;
  border-left: 10vw solid transparent;
  border-bottom: 44px solid rgb(144,166,151);
}

.review:after{
  position: absolute;
  right: 0;
  top: 0;
  content: "";
  width: 72vw;
  height: 0;
  border-top-left-radius: 32px;
  border-bottom: 55px solid rgb(144,166,151);
}

.exhibit:after{
  position: absolute;
  left: 0;
  top: 0;
  content: "";
  width: 72vw;
  height: 0;
  border-top-right-radius: 32px;
  border-bottom: 55px solid rgb(144,166,151);
}

.review-container{
  top:13%;
  width:100%;
  height:100%;
  opacity:1;
  position:absolute;
}

.exhibit-icon{
  width:33px;
  height:33px;
  top:14%;
  left:5%;
  position: absolute;
}

.exhibit-container{
  top:13%;
  width:100%;
  height:100%;
  opacity:1;
  position:absolute;
}

.slide-view{
  width: 100vw;
  flex: 1;
  background: rgb(144,166,151);
}

.slide-item{
  display: flex;
  justify-items: center;
  align-items: center;
  height: 483px;
}

.picture {
  height: 363px;
}

.item-container{
  box-shadow: 0px 12px 13px rgba(76,114,89,.6);
  background:rgb(233,237,234);
  border-radius: 24px;
  width: 294px;
  height: 483px;
  margin: 10px;
  text-align: center;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.item-container-un{
  box-shadow: 0px 12px 13px rgba(76,114,89,.6);
  background:rgb(233,237,234);
  border-radius: 24px;
  width: 294px;
  height: 434px;
  margin: 10px;
  text-align: center;
  overflow: hidden;
}

.swiper-transition {
  transition: margin .5s ease, height .5s ease;
}

.item-name{
  color:rgba(76,114,89,1);
  font-size: 18px;
  margin-bottom: 5px;
}

.item-info{
  color:rgba(76,114,89,1);
  font-size: 14px;
}

.bottom-bar {
  position: absolute;
  bottom: 0;
  left: 0;
}

.to-home {
  width: 78px;
  height: 74px;
}

.show-text {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  transition: height .5s ease;
  padding: 0 5px;
}

.column-list{
  background:  rgb(144,166,151);
  flex: 1;
  width: 100vw;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 28px 0;
}

.review-item {
  width: 326px;
  height: 150px;
  border-radius: 24px;
  background: #fff;
  box-shadow: 0px 12px 13px rgba(76,114,89,.6);
  overflow: hidden;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-bottom: 20px;
}

.review-img {
  width: 121px;
  height: 150px;
}

.review-text {
  padding: 14px;
  height: 150px;
  width: 205px;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
}

.review-title {
  margin-top: 12px; 
  width: 173px;
  height: 84px;
  font-size:18px;
  font-weight:400;
  line-height:26px;
  color:rgba(59,81,66,.86);
  overflow: hidden;
}

.review-description{
  width: 193px;
  height: 41px;
  font-size: 14px;
  font-weight: 400;
  line-height: 18px;
  color:rgba(59,81,66,1);
  opacity:1;
}